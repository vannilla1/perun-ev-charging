# eCarUp API Konfigurácia
# Získajte prístupové údaje na: https://sites.google.com/smart-me.com/wiki-english/3rd-party-systems/ecarup-api

# OAuth 2.0 Client ID (verejný)
NEXT_PUBLIC_ECARUP_CLIENT_ID=your_client_id_here

# OAuth 2.0 Client Secret (POZOR: Nikdy nezdieľajte!)
ECARUP_CLIENT_SECRET=your_client_secret_here

# Produkčné/Development režim
NODE_ENV=development

# Mapbox API Token (voliteľné - pre Leaflet mapy)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here

# Stripe Konfigurácia
# Získajte kľúče na: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# MongoDB Atlas Konfigurácia
# Získajte connection string z MongoDB Atlas Dashboard
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB=perun-electromobility
